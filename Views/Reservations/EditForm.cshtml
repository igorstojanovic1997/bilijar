@model bilijar.ViewModels.NewReservationViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Reservation</h2>

@using (Html.BeginForm("Save", "Reservations"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Reservation.Name)
        @Html.TextBoxFor(m => m.Reservation.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Reservation.ReservationDate)
        @Html.TextBoxFor(m => m.Reservation.ReservationDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Reservation.TableTypeId)
        @Html.DropDownListFor(m => m.Reservation.TableTypeId, new SelectList(Model.TableTypes, "Id", "Name"),  new { @class = "form-control" } )
    </div>
    @Html.HiddenFor(m=>m.Reservation.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save changes</button>
}

